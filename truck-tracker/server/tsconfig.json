{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "allowJs": false,
    "checkJs": false,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./dist",
    "removeComments": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictNullChecks": false,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "logs",
    "sessions",
    "dist"
  ]
}